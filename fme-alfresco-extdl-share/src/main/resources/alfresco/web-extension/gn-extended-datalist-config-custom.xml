<alfresco-config>

   <!-- gn:appModList type create form config-->
   <config evaluator="model-type" condition="gn:appModList" replace="true">
      <forms>
         <!-- Create item form -->
         <form>
            <field-visibility>
               <show id="gn:prodLine" />
               <show id="gn:appName" />
               <show id="gn:appVer" />
               <show id="gn:projVer" />
               <show id="gn:devStatus" />
               <show id="gn:developer"/>
               <show id="gn:testStatus" />
               <show id="gn:tester"/>
             </field-visibility>
            <create-form template="../data-lists/forms/dataitem.ftl" />
         </form>
         <form id="datagrid">
            <field-visibility>
               <show id="dl:itemId" />
               <show id="gn:prodLine" />
               <show id="gn:appName" />
               <show id="gn:appVer" />
               <show id="gn:projVer" />
               <show id="gn:devStatus" />
               <show id="gn:developer"/>
               <show id="gn:testStatus" />
               <show id="gn:tester"/>
               <show id="fm:discussable" force="true"/>
            </field-visibility>
         </form>
         <form id="filter">
            <field-visibility>
               <show id="dl:itemId" />
               <show id="gn:prodLine" />
               <show id="gn:appName" />
               <show id="gn:appVer" />
               <show id="gn:projVer" />
               <show id="gn:devStatus" />
               <show id="gn:developer"/>
               <show id="gn:testStatus" />
               <show id="gn:tester"/>
            </field-visibility>
            <appearance>
               <set id="row1" template="/org/alfresco/components/form/3-column-set.ftl"/>
               <set id="row2" template="/org/alfresco/components/form/2-column-set.ftl"/>
               <set id="row3" template="/org/alfresco/components/form/2-column-set.ftl"/>
               <set id="row4" template="/org/alfresco/components/form/2-column-set.ftl"/>
               <field id="dl:itemId" set="row1" label-id="form.label.itemid" mandatory="false">
	                <control template="/org/alfresco/components/form/controls/textfield.ftl" >
                  	<control-param name="style">width:250px</control-param>
                  </control>
               </field>
               <field id="gn:prodLine" set="row1" mandatory="false">
                  <control template="/org/alfresco/components/form/controls/textfield.ftl" >
                  	<control-param name="style">width:250px</control-param>
                  </control>
               </field>
               <field id="gn:appName" set="row1" mandatory="false">
                  <control template="/org/alfresco/components/form/controls/textfield.ftl" >
                  	<control-param name="style">width:250px</control-param>
                  </control>
               </field>
               <field id="gn:appVer" set="row2" mandatory="false">
               		<control template="/org/alfresco/components/form/controls/textfield.ftl">
               			<control-param name="style">width:250px</control-param>
               		</control>
               </field>
               <field id="gn:projVer" set="row2" mandatory="false">
               		<control template="/org/alfresco/components/form/controls/textfield.ftl">
               			<control-param name="style">width:250px</control-param>
               		</control>
               </field>
               <field id="gn:devStatus" set="row3" mandatory="false">
	               	<control template="/org/alfresco/components/form/controls/filter-selectmany.ftl">
	             		<control-param name="style">width:250px</control-param>
				<control-param name="defaultValues">Not Started,In Progress,Complete,On Hold</control-param>
				<control-param name="size">4</control-param>
			</control>	
               </field>
               <field id="gn:testStatus" set="row3" mandatory="false">
               		<control template="/org/alfresco/components/form/controls/filter-selectmany.ftl">
	             		<control-param name="style">width:250px</control-param>
	             		<control-param name="defaultValues">Not Started,In Progress,Pass,Failed,On Hold</control-param>
	             		<control-param name="size">4</control-param>
	             	</control>
               </field>
               <field id="gn:developer" set="row4" mandatory="false">
               		<control template="/org/alfresco/components/form/controls/textfield.ftl">
               			<control-param name="style">width:250px</control-param>
               		</control>
               </field>
               <field id="gn:tester" set="row4" mandatory="false">
               		<control template="/org/alfresco/components/form/controls/textfield.ftl">
               			<control-param name="style">width:250px</control-param>
               		</control>
               </field>
            </appearance>
         </form>
      </forms>
   </config>

   <!-- gn:appModList type edit form config-->
   <config evaluator="node-type" condition="gn:appModList" replace="true">
      <forms>
         <form>
            <field-visibility>
               <show id="dl:itemId" />
               <show id="gn:prodLine" />
               <show id="gn:appName" />
               <show id="gn:appVer" />
               <show id="gn:projVer" />
               <show id="gn:devStatus" />
               <show id="gn:developer"/>
               <show id="gn:testStatus" />
               <show id="gn:tester"/>
               <show id="cm:creator" />
               <show id="cm:created" />
               <show id="fm:discussable"/>
               <show id="cm:versionable"/>
            </field-visibility>
            <edit-form template="../data-lists/forms/dataitem-edit.ftl" />
            <view-form template="../data-lists/forms/dataitem-view.ftl" />
            <appearance>
               <set id="normal" appearance=""/>
               <set id="other" appearance=""/>	

               <field id="dl:itemId" set="normal" label-id="form.label.itemid">
	               <control template="/org/alfresco/components/form/controls/info.ftl" />
               </field>
               <field id="gn:prodLine" set="normal">
                  <control template="/org/alfresco/components/form/controls/textfield.ftl" >
                  	<control-param name="style">width:450px</control-param>
                  </control>
               </field>
               <field id="gn:appName" set="normal">
                  <control template="/org/alfresco/components/form/controls/textfield.ftl" >
                  	<control-param name="style">width:450px</control-param>
                  </control>
               </field>
               <field id="gn:appVer" set="normal">
                  <control template="/org/alfresco/components/form/controls/textfield.ftl">
                  	<control-param name="style">width:450px</control-param>
                  </control>
               </field> 
               <field id="gn:projVer" set="normal">
                  <control template="/org/alfresco/components/form/controls/textfield.ftl">
                  	<control-param name="style">width:450px</control-param>
                  </control>
               </field> 
               <field id="gn:devStatus" set="normal"/>
               <field id="gn:developer" set="normal"/>
               <field id="gn:testStatus" set="normal"/>
               <field id="gn:tester" set="normal"/>
               <field id="cm:creator" set="other">
               		<control template="/org/alfresco/components/form/controls/extended-person.ftl"/>
               </field>
               <field id="cm:created" set="other" read-only="true"/>
               <field id="fm:discussable" label-id="form.label.comments" set="other">
                  <control template="/org/alfresco/components/form/controls/comments.ftl">
                        <control-param name="rows">5</control-param>
                  	<control-param name="editorWidth">450</control-param>
                  </control>
               </field>
               <field id="cm:versionable" label-id="form.label.version-history" set="other">
                  <control template="/org/alfresco/components/form/controls/version.ftl" />
               </field>
            </appearance>
         </form>
      </forms>
   </config>

</alfresco-config>